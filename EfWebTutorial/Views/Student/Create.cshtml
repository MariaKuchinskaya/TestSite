@model EfWebTutorial.Viewmodels.Students.StudentViewModel

<h2 class="head_addstudent">Добавление студента</h2>

@using(Html.BeginForm("Create", "Student", FormMethod.Post)) {

    <div class="container container2">
  
            <div class="row">
                <div class="col-25">
                    <p class="label">First Name</p>
                </div>
                <div class="col-75">
                    <input type="text" id="fname" name="Student.Name" placeholder="Your name..">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label class="label" for="lname">Last Name</label>
                </div>
                <div class="col-75">
                    <input type="text" id="lname" name="Student.Surname" placeholder="Your last name..">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label class ="label" for="group">Group</label>
                </div>
                <div class="col-75">
                    <select name="Student.GroupId">
                        @foreach (var item in Model.Groups)
                        {
                            <option value="@item.Id" selected="selected">@item.Name</option>
                        }
                        </select>
                </div>
             </div> 
          
        
            <div class="row">
                <input type="submit" value="Submit">
            </div>
    </div>

}
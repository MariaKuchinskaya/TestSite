@model IEnumerable<EfWebTutorial.Models.Faculty>
 
<h2>Список факультетов</h2>
<p><a asp-action="Create">Добавить факультет</a></p>
<table class="table">
     <tr><th>Имя</th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
            
        </tr>
    }
</table>